    },
    {
      "type": "image_picker",
      "id": "trust_icon",
      "label": "Trust Icon"
    },
    {
      "type": "text",
      "id": "trust_text",
      "label": "Trust Text",
      "default": "ไม่พอใจภายใน 90 วัน ยินดีคืนเงินทุกบาท"
    },
    {
      "type": "header",
      "content": "Product Image"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "product_title",
      "label": "Image Alt Text",
      "default": "Peptiva Hair Serum"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "Peptiva Hero"
    }
  ]
}
{% endschema %}
