    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subheadline",
      "default": "เซรั่มบำรุงรากผม ฟื้นฟูระบบไหลเวียนเลือดบนหนังศีรษะ จาก Dermova™"
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "สั่ง Peptiva ลด 50% วันนี้"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link"
    },
    {
      "type": "header",
      "content": "Trust Highlights"
    },
    {
      "type": "text",
      "id": "cod_text",
      "label": "COD Payment Text",
      "default": "จ่ายเงินปลายทาง"
    },
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Free Shipping Text",
      "default": "จัดส่งฟรีทั่วไทย"
    },
    {
      "type": "text",
      "id": "natural_text",
      "label": "Natural Ingredients Text",
      "default": "สารธรรมชาติ 100%"
    },
    {
      "type": "header",
