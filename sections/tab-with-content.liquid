        this.initTabs();
        this.activateTab(0);
      }

      /* ------------------------------
         TAB SETUP
      ------------------------------ */
      initTabs() {
        this.tabs.forEach((tab, index) => {
          tab.addEventListener('click', () => {
            this.activateTab(index);
          });
        });
      }

      activateTab(index) {
        this.currentTab = index;

        /* Activate tab button */
        this.tabs.forEach(t => t.classList.remove('active'));
        this.tabs[index].classList.add('active');

        /* Activate tab content */
        this.contents.forEach(c => c.classList.remove('active'));
        this.contents[index].classList.add('active');

        /* Prepare slider for this tab */
        this.setupSliderForTab(index);
      }

      /* ------------------------------
         PER-TAB SLIDER LOGIC
      ------------------------------ */
      setupSliderForTab(index) {

        const tabContent = this.contents[index];
        const track = tabContent.querySelector('.ai-tabbed-section__cards-{{ ai_gen_id }}');
        const cards = tabContent.querySelectorAll('.ai-tabbed-section__card-{{ ai_gen_id }}');

        if (!track || !cards.length) return;

        /* Create state for this tab if not exists */
        if (!this.tabSliders[index]) {
          this.tabSliders[index] = {
            index: 0,
            track,
            cards
          };
        }

        const slider = this.tabSliders[index];

        /* Show / hide slider buttons */
        const shouldSlide = cards.length > 2;

        this.prevBtn.style.display = shouldSlide ? 'flex' : 'none';
        this.nextBtn.style.display = shouldSlide ? 'flex' : 'none';

        /* Reset position when switching tabs */
        slider.index = 0;
        this.updateSlidePosition(slider);

        /* Re-bind button events to this tab */
        this.prevBtn.onclick = () => {
          if (slider.index > 0) {
            slider.index--;
            this.updateSlidePosition(slider);
          }
        };

        this.nextBtn.onclick = () => {
          if (slider.index < cards.length - 2) {
            slider.index++;
            this.updateSlidePosition(slider);
          }
        };
      }

      /* ------------------------------
         APPLY SLIDE TRANSFORM
      ------------------------------ */
      updateSlidePosition(slider) {

        const cardWidth = slider.cards[0].offsetWidth + 24; // 24 = gap
        const offset = slider.index * cardWidth;

        slider.track.style.transform = `translateX(-${offset}px)`;
      }

    }

    customElements.define('tabbed-section-{{ ai_gen_id }}', TabbedSection{{ ai_gen_id }});

  })();
  </script>
