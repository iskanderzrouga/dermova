    .ai-tabbed-section__content-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-tabbed-section__sidebar-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-tabbed-section__tabs-{{ ai_gen_id }} {
      flex-direction: row;
      overflow-x: auto;
      margin-bottom: 20px;
    }

    .ai-tabbed-section__tab-{{ ai_gen_id }} {
      white-space: nowrap;
    }

    .ai-tabbed-section__cards-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-tabbed-section__cards-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-tabbed-section__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-tabbed-section__subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }
  }
{% endstyle %}

<tabbed-section-{{ ai_gen_id }} class="ai-tabbed-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-tabbed-section__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-tabbed-section__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-tabbed-section__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-tabbed-section__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-tabbed-section__content-{{ ai_gen_id }}">
      <div class="ai-tabbed-section__sidebar-{{ ai_gen_id }}">
        <div class="ai-tabbed-section__tabs-{{ ai_gen_id }}">
          {% for i in (1..4) %}
            {% liquid
              assign tab_title_key = 'tab_' | append: i | append: '_title'
              assign tab_title = block.settings[tab_title_key]
            %}

            <button class="ai-tabbed-section__tab-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-tab="{{ i }}">
              {{ tab_title }}
            </button>
          {% endfor %}
        </div>

        <div class="ai-tabbed-section__slider-controls-{{ ai_gen_id }}">
          <button class="ai-tabbed-section__slider-btn-{{ ai_gen_id }} ai-tabbed-section__slider-prev-{{ ai_gen_id }}" aria-label="Previous tab">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
          <button class="ai-tabbed-section__slider-btn-{{ ai_gen_id }} ai-tabbed-section__slider-next-{{ ai_gen_id }}" aria-label="Next tab">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
      </div>

      <div class="ai-tabbed-section__cards-container-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          <div class="ai-tabbed-section__tab-content-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-content="{{ i }}">
            <div class="ai-tabbed-section__cards-{{ ai_gen_id }}">
              {% for j in (1..3) %}
                {% liquid
                  assign card_image_key = 'tab_' | append: i | append: '_card_' | append: j | append: '_image'
                  assign card_heading_key = 'tab_' | append: i | append: '_card_' | append: j | append: '_heading'
                  assign card_subheading_key = 'tab_' | append: i | append: '_card_' | append: j | append: '_subheading'
                  assign card_description_key = 'tab_' | append: i | append: '_card_' | append: j | append: '_description'
                  assign card_link_text_key = 'tab_' | append: i | append: '_card_' | append: j | append: '_link_text'
                  assign card_link_url_key = 'tab_' | append: i | append: '_card_' | append: j | append: '_link_url'

                  assign card_image = block.settings[card_image_key]
                  assign card_heading = block.settings[card_heading_key]
                  assign card_subheading = block.settings[card_subheading_key]
                  assign card_description = block.settings[card_description_key]
                  assign card_link_text = block.settings[card_link_text_key]
                  assign card_link_url = block.settings[card_link_url_key]

                  assign has_content = false
                  if card_image != blank or card_heading != blank or card_subheading != blank or card_description != blank or card_link_text != blank
                    assign has_content = true
                  endif
                %}

                {% if has_content %}
                  <div class="ai-tabbed-section__card-{{ ai_gen_id }}">
                    <div class="ai-tabbed-section__card-image-{{ ai_gen_id }}">
                      {% if card_image %}
                        <img src="{{ card_image | image_url: width: 600 }}" alt="{{ card_image.alt | escape }}" loading="lazy" width="600" height="{{ 600 | divided_by: block.settings.card_image_aspect_ratio }}">
                      {% else %}
                        <div class="ai-tabbed-section__card-image-placeholder-{{ ai_gen_id }}">
                          {{ 'image' | placeholder_svg_tag }}
                        </div>
                      {% endif %}
                    </div>
                    <div class="ai-tabbed-section__card-content-{{ ai_gen_id }}">
                      {% if card_heading != blank %}
                        <h3 class="ai-tabbed-section__card-heading-{{ ai_gen_id }}">{{ card_heading }}</h3>
                      {% endif %}
                      {% if card_subheading != blank %}
                        <p class="ai-tabbed-section__card-subheading-{{ ai_gen_id }}">{{ card_subheading }}</p>
                      {% endif %}
                      {% if card_description != blank %}
                        <div class="ai-tabbed-section__card-description-{{ ai_gen_id }}">{{ card_description }}</div>
                      {% endif %}
                      {% if card_link_text != blank and card_link_url != blank %}
                        <a href="{{ card_link_url }}" class="ai-tabbed-section__card-link-{{ ai_gen_id }}">{{ card_link_text }}</a>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</tabbed-section-{{ ai_gen_id }}>

<script>
(function() {
  class TabbedSection{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.currentTabIndex = 0;
    }

    connectedCallback() {
      this.tabs = this.querySelectorAll('.ai-tabbed-section__tab-{{ ai_gen_id }}');
      this.tabContents = this.querySelectorAll('.ai-tabbed-section__tab-content-{{ ai_gen_id }}');
      this.prevBtn = this.querySelector('.ai-tabbed-section__slider-prev-{{ ai_gen_id }}');
      this.nextBtn = this.querySelector('.ai-tabbed-section__slider-next-{{ ai_gen_id }}');

      this.setupTabs();
      this.setupSlider();
      this.updateSliderButtons();
    }

    setupTabs() {
      this.tabs.forEach((tab, index) => {
        tab.addEventListener('click', () => {
          const tabNumber = tab.getAttribute('data-tab');
          this.currentTabIndex = index;
          this.switchTab(tabNumber);
        });
      });
    }

    switchTab(tabNumber) {
      this.tabs.forEach(tab => {
        tab.classList.remove('active');
        if (tab.getAttribute('data-tab') === tabNumber) {
          tab.classList.add('active');
        }
      });

      this.tabContents.forEach(content => {
        content.classList.remove('active');
        if (content.getAttribute('data-content') === tabNumber) {
          content.classList.add('active');
        }
      });

      this.updateSliderButtons();
    }

    setupSlider() {
      if (this.prevBtn) {
        this.prevBtn.addEventListener('click', () => {
          this.navigateTabs(-1);
        });
      }

      if (this.nextBtn) {
        this.nextBtn.addEventListener('click', () => {
          this.navigateTabs(1);
        });
      }
    }

    navigateTabs(direction) {
      this.currentTabIndex += direction;

      if (this.currentTabIndex < 0) {
        this.currentTabIndex = 0;
      } else if (this.currentTabIndex >= this.tabs.length) {
        this.currentTabIndex = this.tabs.length - 1;
      }

      const targetTab = this.tabs[this.currentTabIndex];
      const targetTabNumber = targetTab.getAttribute('data-tab');
      this.switchTab(targetTabNumber);
    }

    updateSliderButtons() {
      if (this.prevBtn) {
        this.prevBtn.disabled = this.currentTabIndex === 0;
      }

      if (this.nextBtn) {
        this.nextBtn.disabled = this.currentTabIndex >= this.tabs.length - 1;
      }
    }
  }

  customElements.define('tabbed-section-{{ ai_gen_id }}', TabbedSection{{ ai_gen_id }});
})();
</script>

