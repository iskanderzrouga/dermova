    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-tabbed-section__card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-tabbed-section__card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-tabbed-section__card-content-{{ ai_gen_id }} {
    padding: 24px;
  }

  .ai-tabbed-section__card-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_heading_size }}px;
    color: {{ block.settings.card_heading_color }};
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-tabbed-section__card-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_subheading_size }}px;
    color: {{ block.settings.card_subheading_color }};
    margin: 0 0 12px;
  }

  .ai-tabbed-section__card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_description_size }}px;
    color: {{ block.settings.card_description_color }};
    line-height: 1.6;
    margin: 0 0 16px;
  }

  .ai-tabbed-section__card-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ block.settings.card_link_bg_color }};
    color: {{ block.settings.card_link_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.card_link_border_radius }}px;
    font-size: 14px;
    transition: all 0.3s ease;
  }

  .ai-tabbed-section__card-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.card_link_hover_bg_color }};
    color: {{ block.settings.card_link_hover_text_color }};
  }

