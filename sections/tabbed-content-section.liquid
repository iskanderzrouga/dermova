
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-tabbed-section-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-tabbed-section__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-tabbed-section__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-tabbed-section__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-weight: 600;
  }

  .ai-tabbed-section__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-tabbed-section__content-{{ ai_gen_id }} {
    display: flex;
    gap: 40px;
    align-items: flex-start;
  }

  .ai-tabbed-section__sidebar-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 338px;
  }

  .ai-tabbed-section__tabs-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 24px;
  }

  .ai-tabbed-section__tab-{{ ai_gen_id }} {
    padding: 16px 20px;
    background-color: {{ block.settings.tab_bg_color }};
    color: {{ block.settings.tab_text_color }};
    border: 1px solid {{ block.settings.tab_border_color }};
    border-radius: {{ block.settings.tab_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 16px;
    text-align: left;
  }

  .ai-tabbed-section__tab-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.tab_hover_bg_color }};
    color: {{ block.settings.tab_hover_text_color }};
  }

  .ai-tabbed-section__tab-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.tab_active_bg_color }};
    color: {{ block.settings.tab_active_text_color }};
    border-color: {{ block.settings.tab_active_border_color }};
  }

  .ai-tabbed-section__slider-controls-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    justify-content: center;
  }

  .ai-tabbed-section__slider-btn-{{ ai_gen_id }} {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background-color: {{ block.settings.slider_btn_bg_color }};
    color: {{ block.settings.slider_btn_icon_color }};
    border: 1px solid {{ block.settings.slider_btn_border_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-tabbed-section__slider-btn-{{ ai_gen_id }}:hover:not(:disabled) {
    background-color: {{ block.settings.slider_btn_hover_bg_color }};
    color: {{ block.settings.slider_btn_hover_icon_color }};
  }

  .ai-tabbed-section__slider-btn-{{ ai_gen_id }}:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .ai-tabbed-section__slider-btn-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-tabbed-section__cards-container-{{ ai_gen_id }} {
    flex: 1;
    overflow: hidden;
  }

  .ai-tabbed-section__cards-wrapper-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.4s ease;
  }

  .ai-tabbed-section__tab-content-{{ ai_gen_id }} {
    min-width: 100%;
    display: none;
  }

  .ai-tabbed-section__tab-content-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-tabbed-section__cards-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.cards_per_row }}, 1fr);
    gap: 24px;
  }

  .ai-tabbed-section__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-tabbed-section__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-tabbed-section__card-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.card_image_aspect_ratio }};
    overflow: hidden;
  }

