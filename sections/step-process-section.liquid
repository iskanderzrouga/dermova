</style>

<section class="custom-step-section {{ section.id }}" style="padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;">
  
 
  <div class="section-content">
    <div class="main-title">{{ section.settings.main_title }}</div>
    <div class="description-text">{{ section.settings.description_text }}</div>
  </div>

  <div class="steps-container">
    <div class="image-container">
    {{ section.settings.left_side_image | image_url: width: 635 | image_tag: loading: 'lazy', alt: 'Left Side Image', widths: '320, 450, 550, 635' }}
  </div>
  <div class="right-side-block">
    {% for block in section.blocks %}
      <div class="step">
        <div class="title-container">
        <div class="step-title">{{ block.settings.step_title }}</div>
        </div>
        <div class="parent-desc">
        <div class="step-description">{{ block.settings.step_description }}</div>
        <div class="step-description_2">{{ block.settings.step_description_2 }}</div>
        </div>
      </div>
    {% endfor %}
    </div>
  </div>
  <div class="section-content-bottom">
    <div class="botom-content-btn">
    <div class="bottom-title-disc">
    <div class="main-title_bottom">{{ section.settings.title_bottom }}</div>
    <div class="description-text_bottom">{{ section.settings.description_text_bottom }}</div>
    </div>
    {% if section.settings.cta_text != blank %}
    <a href="{{ section.settings.cta_link }}" class="cta-button_bottom">
      {{ section.settings.cta_text }}
    </a>
    {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "3-Step Process Section",
  "settings": [
    {
      "type": "richtext",
      "label": "Main Title",
      "id": "main_title"
    },
    {
      "type": "richtext",
      "label": "Description Text",
      "id": "description_text"
    },
    {
      "type": "image_picker",
      "label": "Left Side Image",
      "id": "left_side_image"
    },
    {
      "type": "richtext",
      "label": "Main Title",
      "id": "title_bottom"
    },
    {
      "type": "richtext",
      "label": "Description Text",
      "id": "description_text_bottom"
    },
    {
      "type": "text",
      "label": "Call-to-Action Text",
      "id": "cta_text",
      
    },
    {
      "type": "url",
      "label": "Call-to-Action Link",
      "id": "cta_link", 
    },
    {
     "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "step_block",
      "name": "Step 1",
      "settings": [
      
        {
          "type": "text",
          "label": "Step Title",
          "id": "step_title"
        },
        {
          "type": "richtext",
          "label": "Step Description",
          "id": "step_description"
        },
        {
          "type": "richtext",
          "label": "Step Description_2",
          "id": "step_description_2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "3-Step Process",
      "category": "Custom"
    }
  ]
}
{% endschema %}
