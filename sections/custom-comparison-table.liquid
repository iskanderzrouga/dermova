        },
        {
            "type": "header",
            "content": "Right value"
        },
        {
            "type": "select",
            "id": "right-icon",
            "label": "Icon",
            "options": [
                {
                    "value": "tickmark",
                    "label": "Tickmark"
                },
                {
                    "value": "cross",
                    "label": "Cross"
                },
                {
                    "value": "Warning",
                    "label": "warning"
                },
                {
                    "value": "none",
                    "label": "None"
                }
            ],
            "default":"cross"
        },
        {
          "type": "html",
          "id": "right_value",
          "label": "Right value",
          "default": "No"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dermova Comparison Table"
    }
  ]
}
{% endschema %}
