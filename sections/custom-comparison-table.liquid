                    "label": "Tickmark"
                },
                {
                    "value": "cross",
                    "label": "Cross"
                },
                {
                    "value": "Warning",
                    "label": "warning"
                },
                {
                    "value": "none",
                    "label": "None"
                }
            ],
            "default":"tickmark"
        },
        {
          "type": "html",
