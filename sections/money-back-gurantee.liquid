<style>
/* === PHASE 5: Enhanced Money-Back Guarantee Section === */

    .custom_section{
        background: linear-gradient(180deg, #F2F6F6 0%, #E8EFEF 100%);
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    /* Centered Card Design */
    .{{ section.id }} .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 16px;
        background: linear-gradient(180deg, #ffffff 0%, #fafcfc 100%);
        padding: 48px 32px;
        border-radius: 24px;
        max-width: 800px;
        margin: 0 auto;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08), 0 2px 8px rgba(0, 0, 0, 0.04);
        border: 1px solid rgba(57, 88, 91, 0.06);
        transition: all 0.3s ease;
    }

    .{{ section.id }} .container:hover {
        transform: translateY(-4px);
        box-shadow: 0 16px 48px rgba(57, 88, 91, 0.12), 0 4px 16px rgba(0, 0, 0, 0.06);
    }

    /* Icon with Background Circle */
    .{{ section.id }} .image_icon{
        width: 200px;
        height: auto;
        background: linear-gradient(135deg, rgba(57, 88, 91, 0.08) 0%, rgba(57, 88, 91, 0.04) 100%);
        border-radius: 50%;
        padding: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease;
    }

    .{{ section.id }} .container:hover .image_icon {
        transform: scale(1.05);
    }

    .{{ section.id }} .image_icon img{
        height: 100%;
        width: 100%;
    }
    .{{ section.id }} .description p {
        position: relative;
        text-align: center;
        width: 100%;
        max-width: 600px;
        transform: none;
        font-weight: 400;
        font-size: 20px;
        line-height: 1.5;
        font-style: normal;
        color: #4a4a4a;
        margin: 0px 0px;
    }

    .{{ section.id }} .heading{
        font-weight: 800;
        line-height: 1.2;
        color: #1a1a1a;
        margin-bottom: 16px;
        text-align: center;
    }
    .{{ section.id }} .small{
        font-size: 24px;
    }
    .{{ section.id }} .medium{
        font-size: 32px;
    }
    .{{ section.id }} .large{
        font-size: 40px;
    }
    .{{ section.id }} .extra_large{
        font-size: 50px;
    }
    .{{ section.id }} .extra_extra_large{
        font-size: 56px;
    }
    @media (max-width: 768px) {
        .{{ section.id }} .container {
            padding: 32px 20px;
            margin: 0 16px;
        }

        .{{ section.id }} .heading{
            font-size: 28px;
            text-align: center;
            left: 0px;
        }
        .{{ section.id }} .description p{
            font-size: 16px;
            width: 100%;
            position: relative;
            left: 0;
        }
        .{{ section.id }} .image_icon{
            width: 150px;
            height: auto;
            padding: 16px;
        }
        .{{ section.id }} .image_icon img{
            height: 100%;
            width: 100%;
        }
    }
</style>
<section class="custom_section {{ section.id }}">
    <div class="page-width">
        <div class="container">
            <div class="heading {% if section.settings.heading_size == 'small' %} small
                {% elsif section.settings.heading_size == 'medium' %} medium
                {% elsif section.settings.heading_size == 'large' %} large
                {% elsif section.settings.heading_size == 'extra_large' %} extra_large
                {% else %} extra_extra_large{% endif %}" >
                {{ section.settings.heading }}
            </div>
            <div class="image_icon">
                <img src="{{ section.settings.image_icon | img_url: 'master' }}" >
            </div>
            <div class="description">
                <p>{{ section.settings.description }}</p>
            </div>
        </div>
    </div>
</section>
{% schema %}
{
    "name": "Money back gurantee",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "select",
            "id": "heading_size",
            "label": "Heading Size",
            "options": [
                {
                    "value": "small",
                    "label": "Small"
                },
                {
                    "value": "medium",
                    "label": "Medium"
                },
                {
                    "value": "large",
                    "label": "Large"
                },
                {
                    "value": "extra_large",
                    "label": "Extra Large"
                },
                {
                    "value": "extra_extra_large",
                    "label": "Extra Extra Large"
                }
            ],
            "default":"medium"
        },
        {
            "type": "image_picker",
            "id": "image_icon",
            "label": "Image"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "header",
            "content": "Padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Padding Top",
            "min": 0,
            "max": 100,
            "default":36,
            "unit": "px",
            "step": 1
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Padding Bottom",
            "min": 0,
            "max": 100,
            "default":36,
            "unit": "px",
            "step": 1
        }
    ],
    "presets": [
        {
            "name": "Money back gurantee"
        }
    ]
}
{% endschema %}