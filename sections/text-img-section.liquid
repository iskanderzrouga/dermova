

<style>
  .{{ section.id }} .custom-text-image-section {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
  .{{ section.id }} .main-container {
    display: flex;
    width: 100%;
    max-width: 1242px;
    margin: 0 auto;
    gap: 80px;
  }
  .{{ section.id }} .description-text p {
    margin: 0;
    font-size: 18px;
    font-weight: 400;
    line-height: 1.4;
  }
  .{{ section.id }} .left-side {
    width: 100%;
    max-width: 553px;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .{{ section.id }} .title-text {
    text-align: center;
    font-size: 50px;
    font-weight: 800;
  }
  .{{ section.id }} .description-text {
    font-size: 18px;
  }
  .{{ section.id }} .product-image img {
    max-width: 100%;
    height: auto;
  }
  .{{ section.id }} .icon-text-block {
    display: flex;
    align-items: start;
    gap: 12px;
    padding-left: 15px;
    border-radius: 8px;
  }
  .{{ section.id }} .icon-text-blocks {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  .{{ section.id }} .block-icon {
    width: 40px;
    height: 40px;
  }
  .{{ section.id }} .block-text p {
    font-size: 18px;
    margin: 0;
    line-height: 1.4;
  }
.{{ section.id }} .icon-text-block {
  display: flex;
  align-items: start;
  gap: 12px;
  padding-left: 15px;
  border-radius: 8px;
  position: relative; 
  padding-bottom: 16px;
}
.{{ section.id }} .icon-text-block:not(:last-child)::after {
  content: "";
  position: absolute; 
  bottom: 0; 
  left: 0;
  width: 100%;
  max-width:358px; 
  height: 1px; 
  background-color: #BCCACC; 
}
.{{ section.id }} .icon-text-blocks {
  display: flex;
  flex-direction: column;
  gap: 32px;
}
 .{{ section.id }} .title-text p{
  margin:0;
 }
  @media (max-width: 767px) {
    .{{ section.id }} .main-container {
      flex-direction: column-reverse;
      gap: 16px;
    }
    .{{ section.id }} .left-side {
      width: 100%;
      max-width: 100%;
    }
    .{{ section.id }} .right-side {
      width: 100%;
      max-width: 100%;
    }
    .{{ section.id }} .title-text {
      font-size: 36px;
      text-align: center;
      line-height: 1.3;
      margin-bottom: 30px;
      padding: 0 1.5rem;
    }
    .{{ section.id }} .product-image img {
      width: 100%;
      height: auto;
    }
    .{{ section.id }} .icon-text-blocks {
      gap: 20px;
    }
    .{{ section.id }} .block-icon {
      width: 30px;
      height: 30px;
    }
    .{{ section.id }} .block-text p {
      font-size: 18px;
    }
    .{{ section.id }} .description-text p {
      font-size: 16px;
    }
    .{{ section.id }} .description-text {
      font-size: 16px;
    }
  }
</style>

<div class="custom-text-image-section {{ section.id }}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
   <div class="title-text">{{ section.settings.title }}</div>
   <div class="main-container page-width">
      <div class="left-side">
         <div class="description">
            <div class="description-text">
               {{ section.settings.description }}
            </div>
         </div>
         <div class="icon-text-blocks">
            {% for block in section.blocks %}
               <div class="icon-text-block {{ section.id }}">
                  <img src="{{ block.settings.icon | img_url: 'small' | default: '/path/to/default-icon.jpg' }}" alt="Icon" class="block-icon">
                  <div class="block-text">{{ block.settings.block_text }}</div>
               </div>
            {% endfor %}
         </div>
      </div>
      <div class="right-side">
         <div class="product-image">
            {{ section.settings.product_image | image_url: width: 600 | image_tag: loading: 'lazy', alt: 'Product Image', widths: '300, 400, 500, 600' }}
         </div>
      </div>
   </div>
</div>

{% schema %}
{
  "name": "custom-text-image-section",
  "settings": [
     {
      "type": "richtext",
      "label": "Title",
      "id": "title"
    },
    {
      "type": "richtext",
      "label": "Description",
      "id": "description"
    },
    {
      "type": "image_picker",
      "label": "Product Image",
      "id": "product_image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 200,
      "step": 5,
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "icon_text_block",
      "name": "Icon and Text Block",
      "settings": [
        {
          "type": "image_picker",
          "label": "Icon",
          "id": "icon"
        },
        {
          "type": "richtext",
          "label": "Block Text",
          "id": "block_text",
          "default": "<p>Text for the block. You can <strong>bold</strong> and <em>italicize</em> text, or add <a href='#'>links</a>.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Text Image Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
